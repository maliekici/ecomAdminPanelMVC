@model List<ecomAdminPanel.Models.Entity.Brands>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Brand List</h2>

<table>
    <thead style="background-color:aliceblue">
        <tr>
            <td>ID</td>
            <td>Category</td>
            <td>Brand<td>
            <td>Explanation</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.ID</td>
            <td>@item.Categories.Category</td>
            <td>@item.Brand</td>
            <td>@item.Explanation</td>

            <td><a href="/Brands/DeleteInfo/@item.ID" class="btn btn-danger">Delete</a></td>
            <td><a href="/Brands/UpdateInfo/@item.ID" class="btn btn-warning">Update</a></td>
        </tr>
        }
    </tbody>
</table>
<a href="/Brands/Add" class="btn btn-success" style="margin-top: 10px; width:120px;">Add Brand</a>


